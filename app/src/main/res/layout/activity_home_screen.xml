<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="avinash.distributeddownloadingsystem.HomeScreen">

    <Button
        android:id="@+id/button2"
        android:layout_width="246dp"
        android:layout_height="54dp"
        android:onClick="DownloadPartition"
        android:text="Download your partition with unique key"
        tools:layout_editor_absoluteY="286dp"

        android:layout_below="@+id/Button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:id="@+id/Button1"
        android:layout_width="246dp"
        android:layout_height="54dp"
        android:onClick="InitiateDownload"
        android:text="Initiate Download"
        tools:layout_editor_absoluteY="123dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button2"
        android:layout_marginTop="99dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_marginTop="115dp"
        android:text="Manage Downloads"
        android:onClick="ManageDownloads"
        android:layout_alignStart="@+id/button2"
        android:layout_alignEnd="@+id/button2" />
</RelativeLayout>
